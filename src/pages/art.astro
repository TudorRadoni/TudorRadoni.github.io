                title="Art canvas"
                tagline="Get a glimpse of my creations, such as 3D renders, graphics, logos, mockups, edits and more."
                align="start"
            />
            {
                sections.map((section) => (
                    <>
                        <h2>{section.title}</h2>
                        <Grid variant="offset">
                            {
                                section.links.map((link) => (
                                    <li>
                                        <ImageLinkCard link={link} />
                                    </li>
                                ))
                            }
                        </Grid>
                    </>
                ))
            }
        </main>
